@page
@model LoginModel

@using System

@{
    ViewData["Title"] = "Log in";
}

<div class="content">
    <div class="login">
        <section>
            <form id="account" method="post">
                 <h1>@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    @* <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p> *@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    @* <p>
                        <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                    </p> *@
                </div>
            </form>
        </section>
        <div class="google-login">
        <section>
            <hr />
            <h5>Use another service to login</h5>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external logins available
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    var providerName = provider.Name.ToLower();
                                    var id = "login-" + providerName;

                                    <div class="button" id="@id">
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            <div class="image">
                                                @switch (providerName)
                                                {
                                                    case "google":
                                                        <img class="google-icon" src="http://assets.stickpng.com/thumbs/5847f9cbcef1014c0b5e48c8.png"/>
                                                        break;
                                                    case "facebook":
                                                        <img class="google-icon" src="~/images/facebook-icon.png"/>
                                                        break;
                                                }
                                            </div>
                                            <div class="text">
                                                    Login with @provider.Name
                                            </div>
                                        </button>
                                        <br />
                                    </div>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div> 
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
